{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "lib": ["ES2023", "ES6", "DOM"],
    "types": ["node"],
  },

  "exclude": ["node_modules"]
}